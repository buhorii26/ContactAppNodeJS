<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>
      <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data</a>
      <% if(msg.length !== 0) { %>
      <div class="alert alert-success" role="alert">
        <%= msg %>
      </div>
      <% } %>
      <table class="table">
        <thead class="table-success">
          <tr>
            <th>#</th>
            <th>Nama</th>
            <th>No HP</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger" role="alert">
                Data kontak masih kosong.
              </div>
              <% } %>
            </td>
          </tr>
          <% contacts.forEach((contact,i) => {i++%>
          <tr>
            <td><%= i++ %></td>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a
                href="/contact/<%= contact.nama  %>"
                class="btn badge rounded-pill btn-success"
                ><i class="bi bi-info-circle"></i> detail</a
              >
            </td>
          </tr>
          <% })%>
        </tbody>
      </table>
    </div>
  </div>
</div>
